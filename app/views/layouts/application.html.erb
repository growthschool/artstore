<!DOCTYPE html>
<html>
<head>
  <title>Artstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<%= render "common/navbar" %>
	<%= notice_message %>
	<%= yield %>
	<%= link_to(content_tag(:i, nil, class: 'fa fa-home fa-2x'), products_path) %>
	<%= link_to(content_tag(:i, nil, class: 'fa fa-angle-double-left fa-2x'), :back) %>
</div>

</body>
</html>
