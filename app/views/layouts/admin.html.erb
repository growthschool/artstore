<!DOCTYPE html>
<html>
<head>
  <title>Artstore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <%= render "common/navbar" %>
    <%= notice_message %>

    <div class="row">
      <div class="col-md-2">
        <%= render "common/sidebar" %>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
