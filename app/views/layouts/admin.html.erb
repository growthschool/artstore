<html>
  <head>
    <title>Artstore管理後台</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render "common/navbar" %>
      <%= notice_message %>
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills">
            <li><%=link_to("我的商品", admin_products_path) %></li>
            <li><%=link_to("使用者列表", admin_users_path) %></li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
