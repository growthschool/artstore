<h2>使用者列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>權限</th>
      <th>功能</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <!-- 權限 (待處理) -->
            <% if user.admin? %>
             管理者
           <% else %>
             一般使用者
           <% end %>
        </td>
        <td>
          <!-- 轉換權限的按鈕 (待處理) -->
          <% if user.admin? %>
           <!-- <%= link_to("轉為一般使用者", "#", class: "btn btn-info") %> -->
           <%= link_to("轉為一般使用者", to_normal_admin_user_path(user), method: :post, class: "btn btn-info") %>
         <% else %>
           <!-- <%= link_to("轉為管理者", "#", class: "btn btn-primary") %> -->
           <%= link_to("轉為管理者", to_admin_admin_user_path(user), method: :post, class: "btn btn-primary") %>
         <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
