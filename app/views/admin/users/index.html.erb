<h2>使用者列表</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>權限</th>
      <th>功能</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
		<% if user.admin? %>
			admin
		<% else %>
			user
		<% end %>
        </td>
        <td>
		<% if user.admin? %>
			<%= link_to("to normal user", to_normal_admin_user_path(user), method: :post, class: "btn btn-info") %>
		<% else %>
			<%= link_to("to admin", to_admin_admin_user_path(user), method: :post, class: "btn btn-primary") %>
		<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
