<h1>Add A Product</h1>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="form-group">
    <%= f.input :title, required: true, label: "Product Name", input_html: { class: "form-control" } %>
    <%= f.input :description, required: true, label: "Product Description", input_html: { class: "form-control" } %>
    <%= f.input :quantity, required: true, label: "Quantity", input_html: { class: "form-control" } %>
    <%= f.input :price, required: true, label: "Quantity", input_html: { class: "form-control", placeholder: "$" } %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>

<% end %>
