<div class="col-md-12">
  <%= link_to("Add Product", new_admin_product_path, class: 'btn btn-primary pull-right') %>

  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Operation</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>Image</td>
          <td><%= link_to(product.title, admin_product_path(product)) %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td>
            <%= link_to("Edit", edit_admin_product_path(product), class: 'btn btn-default btn-xs') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
