<h1>Products Iâ€™m Selling</h1>

<div class="pageNav">
  <%= link_to(new_admin_product_path, html_options = { class: "btn btn-primary pull-right" }) do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a Product
  <% end %>
</div>

<div class="clearfix"></div>
<hr>

<table class="table table-striped table-hover product-listTable">
  <thead>
    <tr>
      <th>#</th>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Added Date</th>
      <th>Operations</th>
    </tr>
  </thead>

  <tbody>
    <% product_count = 1 %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product_count %></td>
        <td>
          <%#= link_to(truncate(product.title, length: 30), admin_product_path(product)) %>
          <%= link_to(admin_product_path(product)) do %>
            <%= image_tag(product.photo.image.thumb.url, class: "img-thumbnail") %>
            <br><%= truncate(product.title, length: 30) %>
          <% end %>
        </td>
        <td><%= truncate(product.description, length: 20) %></td>
        <td>$<%= product.price %></td>
        <td><%= product.created_at.to_s(:short) %></td>
        <td>
          <%= link_to(edit_admin_product_path(product), html_options = {class: "btn btn-primary btn-xs" } ) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
      </tr>
    <% product_count += 1 %>
    <% end %>
  </tbody>
</table>
