<h2> 編輯 <%= @product.title %> </h2>

<%= simple_form_for [:admin, @product ] , :html => { :class => "form form-horizontal"  } do |f| %>

  <div class="form-group">
  
    <div class="col-sm-10">
      <%= f.input :title %>
    </div>
  </div>
  
  <div class="form-group">
  
    <div class="col-sm-10">
      <%= f.input :description, :as => :text %>
    </div>
  </div>
  
  
  
  <div class="form-group">
  
    <div class="col-sm-1">
      <%= f.input :quantity %>
    </div>
  </div>


  <div class="form-group">
  
    <div class="col-sm-1">
      <%= f.input :price %>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-default" , :disable_with => 'Submiting...' %>
  </div>




<% end %>