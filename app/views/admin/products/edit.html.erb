<h3>修改商品</h3>
<%= simple_form_for [:admin, @product] do |f| %>

<div class="form-group">
  <%= f.input :title %>
</div>
<div class="form-group">
  <%= f.input :description %>
</div>
<div class="form-group">
  <%= f.input :quantity %>
</div>
<div class="form-group">
  <%= f.input :price %>
</div>

<%= f.submit "Submit", data: {disable_with: "submitting...."} %>


<% end %>
