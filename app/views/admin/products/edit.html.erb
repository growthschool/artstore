<div class="col-md-12">
  <h1> Edit Product Data </h1>

  <hr>
  <%= simple_form_for [:admin, @product] do |f| %>
    <div class="form-group">
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :quantity %>
      <%= f.input :price %>
    </div>

    <% if @photo.image.present? %>
      <span>目前商品圖</span> <br>
      <%= image_tag(@photo.image.thumb.url) %>
    <% end %>

    <div class="form-group">
      <%= f.simple_fields_for :photo do |c| %>
        <%= c.input :image, as: :file %>
      <% end %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
  <% end %>
</div>
