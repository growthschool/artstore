<%= simple_form_for [:admin, @product] do |f| %>

<div class="group">
<%= f.input :title, label: '標題' %>
</div>

<div class="group">
<%= f.input :description, label: '敘述' %>
</div>

<div class="group">
<%= f.input :quantity, label: '數量' %>
</div>

<div class="group">
<%= f.input :price, label: '價錢' %>
</div>

<div class="form-group">
  <%= f.simple_fields_for :photo do |c| %>
  <%= c.input :image, as: :file %>
  <% end %>
</div>

<%= f.button :submit, "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
  
 