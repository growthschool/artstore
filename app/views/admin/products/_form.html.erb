<%= simple_form_for [:admin, @product], html: { multipart: true } do |form| %>
	<div class="form-group">
		<%= form.input :title, label: "產品標題", input_html: { class: "form-control" } %>
	</div>
	<div class="form-group">
		<%= form.input :description, label: "產品敘述", as: :text, input_html: { class: "form-control" } %>
	</div>
	<div class="form-group">
		<%= form.input :quantity, label: "數量", input_html: { class: "form-control" } %>
	</div>
	<div class="form-group">
		<%= form.input :price, label: "價錢", input_html: { class: "form-control" } %>
	</div>
	<div class="form-group">
		<%= form.simple_fields_for :photos, @product.photos do |photos_form| %>
			<%= photos_form.input :image, as: :file %>
		<% end %>
	</div>
	<%= form.submit "送出", class: "btn btn-primary" , data: { disable_with: "送出中..." } %>
<% end %>
