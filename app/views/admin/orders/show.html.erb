<div class="col-md-12">
  <h2>Order Info ( <%= render_order_paid_state(@order) %> )</h2>

  <%= render 'admin/orders/state_option', order: @order %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="80%">Product</th>
        <th>Price</th>
        <th>Qty</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td>
            <%= link_to(order_item.product_name, product_path(order_item.product_id)) %>
          </td>
          <td><%= order_item.price %></td>
          <td><%= order_item.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="total clearfix">
    <span class="pull-right">
      Total: <%= @order.total %> NTD
    </span>
  </div>

  <hr>

  <h2>Shipping Info</h2>

  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td>Order</td>
      </tr>
      <tr>
        <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
      </tr>
      <tr>
        <td>Reciever</td>
      </tr>
      <tr>
        <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
      </tr>
    </tbody>
  </table>
</div>
