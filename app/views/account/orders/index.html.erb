<h2>我的訂單列表</h2>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>訂單編號</th>
      <th>訂單成立時間</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|  %>
    <tr>
      <td><%= link_to(order.id, order_path(order.token)) %></td>
      <td><%= order.created_at.to_s(:long) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

