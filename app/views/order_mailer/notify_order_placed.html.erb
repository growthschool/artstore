<link rel="stylesheet" type="text/css" href="/assets/application.css" />

<div class="row">
  <div class="col-md-12">
    <h2>
      Product Information <br>
      <small>
        <%= link_to "Order link", order_url(@order.token) %>
      </small>
    </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="70%">Product Info</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Sum</th>
        </tr>
      </thead>

      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.product_name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.quantity * order_item.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total group clearfix">
      <h4 class="pull-right">
        Total <%= @order.total %> NTD
      </h4>
    </div>

    <hr>

    <h2>Order Information</h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Billing</td>
        </tr>
        <tr>
          <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
        </tr>
        <tr>
          <td>Shipping</td>
        </tr>
        <tr>
          <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
