<div class="row">
  <div class="col-md-12">
  <h2>商品明細</h2>
  <table class="table">
  <thead>
  <tr>
  <th width="80%">商品明細</th>
  <th>單價</th>
  </tr>
  </thead>
  <tbody>
  <% current_cart.items.each do |product| %>
  <tr>
  <td><%= link_to(product.title, product_path(product)) %></td>
  <td><%= product.price %></td>
  </tr>
  <% end %>
  </tbody>
  </table>
  <hr>
  <div class="total clearfix">
  <span class="pull-right">總計 <%= render_cart_total_price(current_cart) %> NTD</span>
  </div>
  <hr>
  <div class="order-form">
  <%= simple_form_for @order do |f| %>
  <%= f.simple_fields_for :info do |c| %>
  <legend>訂購人</legend>
  <div class="form-group">
  <%= c.input :billing_name %>
  </div>
  <div class="form-group">
  <%= c.input :billing_address %>
  </div>
  <legend>收件人</legend>
  <div class="form-group">
  <%= c.input :shipping_name %>
  </div>
  <div class="form-group">
  <%= c.input :shipping_address %>
  </div>
  <% end %>
  <div class="checkout">
  <%= f.submit "生成訂單", class: "btn btn-primary", disable_with: "Submitting..." %>
  </div>
  <% end %>
  </div>
  </div>
  </div>

