<div class="row">
  <div class="col-md-12">

      <%= link_to("清空購物車", clean_carts_path ,
         method: :delete , class: "pull-right",
               style: "text-decoration: underline;",
               data: { confirm: "你確定要清空整個購物車嗎？"} )%>


      <h1>購物車明細</h1>

      <table class="table table-borderd">
        <thead>
          <tr>
          <th>商品資訊</th>
          <th></th>
          <th>價錢</th>
          <th>操作選項</th>
          </tr>
        </thead>
        <tbody>

          <% current_cart.items.each do |product| %>
          <tr>
            <td><%= render_product_photo(product.default_photo) %></td>
            <td><%= link_to(product.title,product_path(product)) %></td>
            <td><%= product.price %></td>
            <td>
              <%= link_to item_path(product), method: :delete do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <div class="total clearfix">
        <span class="pull-right">
           <span> 總計 <%= render_cart_total_price(current_cart) %>  NTD  </span>
        </span>
      </div>

      <hr>



      <div class="checkout clearfix">
          <%= link_to("確認結賬", checkout_carts_path , :method => :post , :class => "btn btn-primary btn-lg btn-danger pull-right") %>
      </div>
  </div>
</div>
