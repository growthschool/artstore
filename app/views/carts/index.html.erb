<!-- Table -->
<table class="table table-bordered">
   <caption>購物車</caption>
   <thead>
      <tr>
         <th>Product Pic</th>
         <th>Name</th>
         <th>Price</th>
         <th>Quantity</th>
         <th>Option</th>
      </tr>
   </thead>
   <tbody>
     <% current_cart.cart_items.each do |item| %>
     <tr>
       <td><%= image_tag item.product.photos.first.image.thumb.url %></td>
         <td>
           <%= link_to item.product.title, product_path(item.product) %>
         </td>
         <td> <%= item.product.price %> </td>
         <td> <%= item.quantity %>
          <%= form_for item, :url => cart_item_path(current_cart, item) do |f| %>
             <%= f.select :quantity, 1..item.product.quantity %>
             <%= f.submit "update", :disable_with => 'Submiting...' %>
          <% end %>
         </td>
          <td>
           <%= link_to  cart_item_path(current_cart, item), :method => :delete do %>
           <i class="fa fa-trash"></i>
           <% end %>
          </td>
       </tr>
       <% end %>
  </tbody>
</table>


<span class="pull-right">總計 <%= current_cart.total_price %> NTD</span>
</br></br>
<% if current_cart.cart_items.count > 0 %>
<%= link_to "結賬", checkout_carts_path , :method => :post , data: { confirm: "Are you sure?"} ,class: "btn btn-danger pull-right" %>
<%= link_to "Clean", clean_carts_path , :method => :delete , data: { confirm: "Are you sure?"} ,class: "btn btn-info pull-right" %>
<% end %>
<%= link_to "Back", root_path, class: "btn btn-primary pull-right" %>
