<div class="row">
  <div class="col-md-12">
    <h2>購物車</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品資訊</th>
          <th>單價</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |product| %>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
              <% end %>
            </td>
            <td><%= link_to(product.title, product_path(product)) %></td>
            <td><%= product.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        <span>Total xxx NTD</span>
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("確認結賬", "#",
                  class: "btn btn-lg btn-danger pull-right") %>
    </div>

  </div>
</div>
