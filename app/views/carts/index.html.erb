<div class="row">
  <div class="col-md-12">
    <%= link_to("清空購物車", clean_carts_path, method: :delete, data: {confirm: "確定清空您的購物車"}, class: "pull-right", style: "text-decoration: underline")  %>
    <h2> 購物車 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品資訊</th>
          <th>單價</th>
          <th>數量</th>
          <th>操作選項</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |product| %>
        <tr>
          <td width="300">
            <%= link_to product_path(product) do %>
            <% if product.photo.present? %>
                  <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
            <% end %>
          </td>
          <td>
            <b style="font-size: 120%"><%= link_to product.title, product_path(product)  %></b>
            <br>
            <br>
            <%= simple_format(product.description) %>
          </td>
          <td style="font-size: 150%">
            <%= product.price %>
          </td>
          <td>
            <% item = current_cart.find_cart_item(product) %>
            <%= form_for item, url: item_path(product) do |f| %>
            <%= f.select :quantity, 1..product.quantity %>
            <%= f.submit "更新", data: {disable_with: "Submitting.."} %>
            <% end %>
          </td>
          <td>
            <%= link_to item_path(product), method: :delete do %>
            <i class="fa fa-trash fa-2x"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <div class="clearfix">
      <span class="pull-right">
        <span>總計： <%= cart_total_price(current_cart) %>  NTD</span>
      </span>
    </div>

    <hr>

    <div>
      <%= link_to "確認結帳", checkout_carts_path, method: :post, class: "btn btn-danger btn-lg pull-right"  %>
    </div>

  </div>
</div>
