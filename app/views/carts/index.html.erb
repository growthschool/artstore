<div class="row">
  <div class="col-md-12">

  <%= link_to("清空購物車", clean_carts_path,
              method: :delete , class: "btn btn-md btn-default pull-right",
              data: { confirm: "確定清空整個購物車嗎？"} ) %>

    <h2> 購物車 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品資訊</th>
          <th>單價</th>
          <th>數量</th>
          <th>動作</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.items.each do |product| %>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                <% if product.photo.present? %>
                  <%= image_tag(product.photo.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to(product.title, product_path(product)) %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              #
            </td>
            <td>
              #
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="totale clearfix">
      <span class="pull-right">
        金額總計 NTD XXX
      </span>
    </div>

    <hr>

    <div class="checkout clearfix">
      <%= link_to("確認訂單", "#", method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>

  </div>
</div>
