<div class="row">
  <div class="col-md-6">
    <% if @product.photo.present? %>
      <%= image_tag(@product.photo.image.medium.url, class: 'thumbnail') %>
    <% else %>
      <%= image_tag('http://placehold.it/400x400&text=No Image', class: 'thumbnail') %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div style="width: 100%;">
      <p><%= @product.description %></p>
    </div>
    <div>Quatity: <%= @product.quantity %></div>
    <div class="product-price">Price: $ <%= @product.price %></div>
    <div class="pull-right">
      <%= link_to("Add to Cart", '#', class: 'btn btn-danger btn-lg') %>
    </div>
  </div>
</div>
