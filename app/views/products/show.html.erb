<div class="row">
  <div class="col-md-5 col-xs-12">
    <div class="product-image">
      <%= render_product_image(@product.default_image, :medium) %>
    </div>
  </div>

  <div class="col-md-7 col-xs-12">
    <div class="product-title">
      <h3><%= @product.title %></h3>
    </div>
    <div class="product-description">
      <%= @product.description %>
    </div>
    <div class="product-quantity">
      <%= "Quantity: #{@product.quantity}" %>
    </div>
    <div class="product-price">
      <%= "Price: $#{@product.price}" %>
    </div>
    <% if @product.quantity > 0 %>
      <%= link_to "Add to cart", add_to_cart_product_path(@product), method: :post, class: "btn btn-lg btn-danger pull-right" %>
    <% else %>
      <%= link_to "Out of stock", '#', class: "btn btn-lg btn-danger disabled pull-right" %>
    <% end %>
  </div>
</div>
