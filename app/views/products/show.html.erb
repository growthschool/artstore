<div class="row">
  <div class="col-md-6">
    <%= image_tag(@product.photo.image.medium.url, class: "thumbnail") %>
  </div>

  <div class="col-md-6">
    <h2><%= @product.title %></h2>

    <div style="height: 100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div>剩餘數量：<%= @product.quantity %></div>
    <div class="product-price">$ <%= @product.price %></div>
    <div class="pull-right">
      <% if @product.quantity > 0 %>
          <%= link_to("加入購物車", add_to_cart_product_path(@product), method: :post, class: "btn btn-primary btn-lg btn-danger") %>
      <% else %>
          <%= link_to("已銷售一空，無法購買", products_path, class:"btn btn-primary disabled") %>
      <% end %>
    </div>
  </div>
</div>