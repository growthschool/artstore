<div class="row">
  <div class="col-md-6">
    <%= render_product_photo(@product.default_photo, :medium) %>
  </div>

  <div class="col-md-6">
    <h2><%= @product.title %> <small><%= @product.description %></small></h2>

    <div>
      數量：<%= @product.quantity %>
    </div>
    <div class="product-price">
      $ <%= @product.price %>
    </div>
    <div class="pull-right">
      <% if @product.quantity > 0 %>
        <%= link_to("加入購物車", add_to_cart_product_path(@product), method: :post, class: "btn btn-primary btn-lg") %>
      <% else %>
        已銷售一空，無法購買
      <% end %>
    </div>
  </div>
</div>
