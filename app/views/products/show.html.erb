<div class="row">
  <div class="col-md-6">
    <%= render_product_photo(@product.default_photo, :medium) %>
  </div>

  <div class="col-md-6">
    <h2><%= @product.title %> <small><%= @product.description %></small></h2>

    <div>
      數量：<%= @product.quantity %>
    </div>
    <div class="product-price">
      $ <%= @product.price %>
    </div>
    <div class="pull-right">
      <%= link_to("加入購物車", "#", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
</div>
