<%= render "common/breadcrumb" %>

<div class="row">
  <div class="col-md-6">
    <% if @product.photo.present? %>
      <%= image_tag(@product.photo.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=產品無圖", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <p><%= @product.description %></p>
    <div> 數量：<%= @product.quantity %> </div>
    <div class="product-price">價錢： $ <%= @product.price %> </div>
    <div class="mt50">
      <%= link_to("加入購物車", "#", :class => "btn btn-primary btn-lg btn-danger") %>
    </div>
  </div>
</div>