<!-- div.row>div.col-md-12>(table.table.table-bordered>(thead>tr>th*2)+(tbody>tr>th*2))+hr+h2{寄送資訊}+(table.table-striped.table-bordered>tbody>tr*4>td) -->
<div class="row">
  <div class="col-md-12">
    <h2>訂單明細</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th>單價</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <th><%= order_item.product_name %></th>
            <th><%= order_item.price %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <spen class="pull-right">總計 <%= @order.total %> NTD</spen>
    </div>
    <hr>
    <h2>寄送資訊</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>訂購人</td>
        </tr>
        <tr>
          <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
        </tr>
        <tr>
          <td>收件人</td>
        </tr>
        <tr>
          <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
