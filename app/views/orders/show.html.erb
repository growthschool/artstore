<div class="row">
  <div class="col-md-12">

    <h2>訂單明細</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <td width="80%">商品資訊</td>
          <td>單價</td>
          <td>數量</td>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
            <td>
              <%= order_item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        <span>金額總計 NTD <%= @order.total %></span>
      </span>
    </div>

    <hr>

    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>訂購人</td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td>收件人</td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
