<div class="row">
  <div class="col-md-12">
    <h2>Product Information</h2>
    <%= render 'orders/product_info', order: @order, order_items: @order_items %>

    <hr>

    <h2>Order Information</h2>
    <%= link_to "Edit", edit_order_path(@order.token), class: "btn btn-primary pull-right" %>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Billing</td>
        </tr>
        <tr>
          <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
        </tr>
        <tr>
          <td>Shipping</td>
        </tr>
        <tr>
          <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
        </tr>
      </tbody>
    </table>

    <% if @order.is_paid? %>
      <p class="text-center">This order is paid.</p>
    <% else %>
      <div class="pull-right">
        <%= link_to "Pay with credit card", pay_with_credit_card_order_path(@order.token), class: "btn btn-lg btn-danger" %>
        <%= link_to "Pay with ATM", '#', class: "btn btn-lg btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
