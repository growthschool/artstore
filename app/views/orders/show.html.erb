<div class="row">
  <div class="col-md-12">

    <h2> 訂單明細 </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明細</th>
          <th>單價</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.product_name %>
            </td>
            <td>
              <%= order_item.price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        總計 <%= @order.total %> NTD
      </span>
    </div>

     <hr>

     <h2> 寄送資訊 </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            訂購人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.billing_name %> - <%= @order_info.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收件人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order_info.shipping_name %> - <%= @order_info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
    <% if !@order.is_paid? %>
      <div class="pull-right">
        <%= link_to("以信用卡付款", pay_with_credit_card_order_path(@order.token), class: "btn btn-lg btn-danger") %>
        <%= link_to("以 ATM 付款", "#", class: "btn btn-lg btn-danger") %>
      </div>
    <% else %>
      <p class="text-center">此訂單已完成付款</p>
    <% end %>
  </div>
</div>
