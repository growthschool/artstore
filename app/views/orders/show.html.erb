<div class="roe">
  <div class="col-md-12">
    <h2>訂單明細</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th width="80%">商品明細</th>
            <th class="text-center">單價</th>
            <th class="text-center">數量</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.product_name %></td>
            <td class="text-center"><%= order_item.price %></td>
            <td class="text-center"><%= order_item.quantity %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="total clearfix">
        <span class="pull-right">總計 <%= @order.total %>NTD</span>
      </div>
      <hr>

      <h2>寄送資訊</h2>
      <table class="table table-striped table-bordered">
        <tbody>
        <tr>
          <td>訂購人</td>
        </tr>
        <tr>
          <td><%= @order_info.billing_name %> - <%= @order_info.billing_address %></td>
        </tr>
        <tr>
          <td>收貨人</td>
        </tr>

        <tr>
          <td><%= @order_info.shipping_name %> - <%= @order_info.shipping_address %></td>
        </tr>
        </tbody>
      </table>
      <% if !@order.is_paid? %>
      <div class="pull-right">
        <%= link_to "以信用卡付款", pay_with_credit_card_order_path(@order.token), class: "btn btn-danger btn-lg"  %>
        <%= link_to "以ATM轉帳", "#", class: "btn btn-danger btn-lg"  %>
      </div>
      <% else %>
      <p class="text-center">此訂單已完成付款</p>
      <% end %>
  </div>
</div>
