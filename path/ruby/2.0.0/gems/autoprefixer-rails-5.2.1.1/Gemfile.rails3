source 'https://rubygems.org'

gemspec
gem 'rake'
gem 'rails', '~> 3.2'
gem 'compass'
gem 'sass-rails'
gem 'rspec-rails'

gem 'execjs', '< 2.5.0' if RUBY_VERSION.start_with? '1.9.'

